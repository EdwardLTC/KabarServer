  <div class="container tm-mt-big tm-mb-big">
    <div class="row">
      <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
          <div class="row">
            <div class="col-12">
              <h2 class="tm-block-title d-inline-block">Add Acticle</h2>
            </div>
          </div>
          <form action="/cpanel/articles/add-article" class="tm-edit-product-form" method="post"
            enctype="multipart/form-data">
            <div class="row tm-edit-product-row">
              <div class="col-xl-6 col-lg-6 col-md-12">
                <div class="form-group mb-3">
                  <label for="Title">Acticle Title
                  </label>
                  <input id="title" name="title" type="text" class="form-control validate" required />
                </div>
                <div class="form-group mb-3">
                  <label for="content">content</label>
                  <textarea name="content" class="form-control validate" rows="3" required></textarea>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                <div class="tm-product-img-dummy mx-auto" style="overflow: hidden;">
                  <i class="fas fa-cloud-upload-alt tm-upload-icon" style="position: absolute;" id="icon"
                    onclick="document.getElementById('fileInput').click();"></i>
                  <image id="img" style="width: 100%;height:100%; object-fit:contain" />
                </div>
                <div class="custom-file mt-3 mb-3">
                  <label for="fileInput" class="btn btn-primary btn-block mx-auto">UPLOAD ARTICLE IMAGE</label>
                  <input id="fileInput" type="file" class="btn btn-primary btn-block mx-auto"
                    value="UPLOAD ARTICLE IMAGE" name="image" style="visibility:hidden;" />
                </div>
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block text-uppercase">Add Article Now</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
 
  <script>
    var icon = document.getElementById('icon');
    fileInput.onchange = evt => {
      const [file] = fileInput.files
      if (file) {
        img.src = URL.createObjectURL(file)
        icon.style.opacity = 0;
      }
    }
  </script>
