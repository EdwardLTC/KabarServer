                <h2 class="tm-block-title d-inline-block">Acticle Detail</h2>
              </div>
            </div>
            {{!-- {{article}} --}}
            <form action="/cpanel/articles/{{article._id}}/update" class="tm-edit-product-form" method="post"
              enctype="multipart/form-data">
              <div class="row tm-edit-product-row">
                <div class="col-xl-6 col-lg-6 col-md-12">
                  <div class="form-group mb-3">
                    <label for="Title">Acticle Title
                    </label>
                    <input id="title" name="title" type="text" class="form-control validate"
                      value="{{article.title}}" />
                  </div>
                  <div class="form-group mb-3">
                    <label for="content">content</label>
                    <textarea name="content" class="form-control validate" rows="3">{{article.content}}</textarea>
                  </div>
                  <div class="row">
                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                      <label for="expire_date">Create At
                      </label>
                      <input id="expire_date" name="createAt" type="text" class="form-control validate"
                        data-large-mode="true" value="{{article.createdAt}}" />
                    </div>
                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                      <label for="stock">Create By
                      </label>
                      <input id="stock" name="createdBy" type="text" class="form-control validate"
                        value="{{article.createdBy}}" />
                    </div>
                  </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                  <div class="tm-product-img-dummy mx-auto" style="overflow: hidden;">
                    <i style="position: absolute;" id="icon"
                      onclick="document.getElementById('fileInput').click();">
                      </i>
                    <image id="img" style="width: 100%;height:100%; object-fit:contain"
                      src="{{article.image}}" />
                  </div>
                  <div class="custom-file mt-3 mb-3">
                    <label for="fileInput" class="btn btn-primary btn-block mx-auto">UPLOAD ARTICLE IMAGE</label>
                    <input id="fileInput" type="file" class="btn btn-primary btn-block mx-auto"
                       name="image" style="visibility:hidden;" />
                  </div>
                </div>
                <div class="col-12">
                  <button type="submit" class="btn btn-primary btn-block text-uppercase">Update Article Now</button>
                </div>
            </form>
          </div>

